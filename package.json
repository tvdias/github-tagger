{
  "name": "github-tagger",
  "version": "0.0.2",
  "private": true,
  "description": "Tags the commit with a given text",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tvdias/github-tagger.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Thiago Vaz Dias",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/node": "^16.15.0",
    "husky": "^8.0.2",
    "jest": "^29.3.0",
    "jest-circus": "^29.3.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "@vercel/ncc": "0.34.0"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "npm run build && npm run format && ncc build lib/main.js -o .github/actions/github-tagger/lib",
      "post-commit": "npm prune --production && git add node_modules/* && git commit -m \"Husky commit correct node modules\""
    }
  }
}
